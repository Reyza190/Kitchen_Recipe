<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:paddingStart="35dp"
    android:paddingTop="30dp"
    android:paddingEnd="35dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backbtn"

            />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/black"
            android:fontFamily="@font/sfprorounded"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="-3dp"
            android:layout_marginStart="9dp"
            android:layout_toRightOf="@+id/backBtn"
            android:layout_alignTop="@+id/backBtn"
            />

        <TextView
            android:id="@+id/tvImagaUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link Image"
            android:textSize="17sp"
            android:layout_marginTop="50dp"
            android:textColor="@color/textcolor_add"
            android:layout_alignStart="@+id/addImage"
            android:fontFamily="@font/sfprorounded"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edtImageUrl"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/tvImagaUrl"
            android:background="@drawable/background_input_recipe"
            />

        <TextView
            android:id="@+id/tvnamamakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Makanan"
            android:layout_below="@+id/edtImageUrl"
            android:textSize="17sp"
            android:textColor="@color/textcolor_add"
            android:layout_alignStart="@+id/addImage"
            android:fontFamily="@font/sfprorounded"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:id="@+id/edtNamaMakanan"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textSize="15sp"
            android:hint="Masukkan nama makanan"
            android:textColorHint="@color/hintcolor"
            android:paddingStart="27dp"
            android:elevation="1dp"
            android:fontFamily="@font/sfprorounded"
            android:layout_marginTop="9dp"
            android:background="@drawable/background_input_recipe"
            android:layout_below="@+id/tvnamamakanan"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tvdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Makanan"
            android:layout_below="@+id/edtNamaMakanan"
            android:textSize="17sp"
            android:textColor="@color/textcolor_add"
            android:layout_alignStart="@+id/addImage"
            android:fontFamily="@font/sfprorounded"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/tvdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Makanan"
            android:layout_below="@+id/edtNamaMakanan"
            android:textSize="17sp"
            android:textColor="@color/textcolor_add"
            android:layout_alignStart="@+id/addImage"
            android:fontFamily="@font/sfprorounded"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/edtDeskripsiAddRecipes"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:textSize="12sp"
            android:elevation="1dp"
            android:hint="Jelaska deskripsi makanan"
            android:textColorHint="@color/hintcolor"
            android:paddingStart="17dp"
            android:justificationMode="inter_word"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/sfprorounded"
            android:background="@drawable/background_inputdeskripsi_recipe"
            android:layout_below="@+id/tvdeskripsi"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stepMakanan"
            android:layout_below="@+id/edtDeskripsiAddRecipes"
            android:textColor="@color/textcolor_add"
            android:textSize="17sp"
            android:textStyle="bold"
            />



