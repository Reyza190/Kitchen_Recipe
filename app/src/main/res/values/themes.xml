<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResepDapur" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>


    </style>

    <style name="Divider.Horizontal" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        // You can change thickness here.

    </style>

    <style name="ThemeOverlay.Search" parent="Theme.ResepDapur">
        <!-- Primary brand color. -->
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="itemIconTint">@color/black</item>
        <item name="iconSize">5dp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.Fab" parent="Theme.ResepDapur">
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/background_primary</item>
    </style>

    <style name="Theme.ResepDapur.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ResepDapur.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ResepDapur.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>